#:import MeshLinePlot symbionic.gui.graph.MeshLinePlot
Root:
    BoxLayout:
        orientation: "vertical"
        ActionBar:
            pos_hint: {'top':1}
            ActionView:
                use_separator: True
                ActionPrevious:
                    title: 'Symbionic App'
                    with_previous: False
                ActionGroup:
                    text: 'Actions'
                    mode: 'spinner'
                    ActionButton:
                        text: 'Save Model'
                    ActionButton:
                        text: 'Load Model'
                    ActionButton:
                        text: 'Save Data'
                        on_press: root.show_raw_data_save()
                    ActionButton:
                        text: 'Load Data'
        BoxLayout:
            orientation: "vertical"
            padding: 40
            BoxLayout:
                orientation: "horizontal"
                size_hint: [1, .8]
                BoxLayout:
                    orientation: "vertical"
                    size_hint: [0.4, 1]
                    BoxLayout:
                        orientation: "vertical"
                        size_hint: [1, 0.1]
                        Label:
                            font_size: 20
                            text: "Raw Data Signals"
                    BoxLayout:
                        orientation: "vertical"
                        id: raw_data_box
                        size_hint: [1, 0.9]
                BoxLayout:
                    orientation: "vertical"
                    size_hint: [0.1, 1]
                BoxLayout:
                    orientation: "vertical"
                    size_hint: [0.4, 1]
                    BoxLayout:
                        orientation: "vertical"
                        id: raw_data_title
                        size_hint: [1, 0.1]
                        Label:
                            font_size: 20
                            text: "Gesture Predictions"
                    BoxLayout:
                        orientation: "vertical"
                        id: gesture_box
                        size_hint: [1, 0.9]
            BoxLayout:
                orientation: "horizontal"
                size_hint: [1, .2]
                BoxLayout:
                    orientation: "horizontal"
                BoxLayout:
                    size_hint: None, None
                    size: 300, 50
                    orientation: "horizontal"
                    Button:
                        id: start_button
                        text: "START"
                        bold: True
                        on_press: root.start()
                    Button:
                        id: stop_button
                        text: "STOP"
                        bold: True
                        on_press: root.stop()

<SaveDialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            on_selection: text_input.text = self.selection and self.selection[0] or ''

        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Save"
                on_release: root.save(filechooser.path, text_input.text)